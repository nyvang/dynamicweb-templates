@inherits Dynamicweb.Rendering.RazorTemplateBase<Dynamicweb.Rendering.RazorTemplateModel<Dynamicweb.Rendering.Template>>

<div class="items">
    <div class="item-details">
        @foreach (var field in GetLoop("ItemPublisher:Item.Fields"))
        {
            <div class="item-details-field">
                <div class="item-details-field-name">@field.GetValue("ItemPublisher:Item.Field.Name")</div>
                <div class="item-details-field-value">
                    @if (field.Values.ContainsKey("ItemPublisher:Item.Field.Value"))
                    {
                        @field.GetValue("ItemPublisher:Item.Field.Value")
                    }
                    else
                    {
                        <span class="item-details-field-novalue">(<!--@Translate("ItemPublisher:Details.NotSpecified", "not specified")-->)</span>
                    }
                </div>
            </div>
        }
    </div>
    <div class="item-details-controls">
        <a class="btn" href="#"><!--@Translate("ItemPublisher:Details.GoBack", "Go back")--></a>
    </div>
</div>
