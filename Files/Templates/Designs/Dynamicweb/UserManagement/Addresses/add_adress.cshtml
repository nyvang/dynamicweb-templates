<h2>

    @if (!string.IsNullOrWhiteSpace(GetString("UserManagement:User.ManageAddresses.AddAddress")))
    {

        <text><!--@Translate(addAddress, "Add address")--></text>
    }
    @if (!string.IsNullOrWhiteSpace(GetString("UserManagement:User.ManageAddresses.UpdateAddress")))
    {

        <text><!--@Translate(updateAddress, "Update address")--></text>
    }
</h2>
<br />

@GetValue("UserManagement:User.ManageAddresses.FormStart")
<table>
    <tr>
        <th align="left">
            <!--@Translate(Description, "Description")-->
            : </th>
        <td>
            <input type="text" name="Description" id="Description" value="" class="form-control" />
        </td>
    </tr>
    <tr>
        <th align="left">
            <!--@Translate(Address, "Address")-->
            : </th>
        <td>
            <input type="text" name="Address" id="Address" value="" class="form-control" /></td>
    </tr>
    <tr>
        <th align="left">
            <!--@Translate(Address2, "Address2")-->
            : </th>
        <td>
            <input type="text" name="Address2" id="Address2" value="" class="form-control" /></td>
    </tr>
    <tr>
        <th align="left">
            <!--@Translate(ZipCode, "Zip code")-->
            : </th>
        <td>
            <input type="text" name="Zip" id="Zip" value="" class="form-control" /></td>
    </tr>
    <tr>
        <th align="left">
            <!--@Translate(City, "City")-->
            : </th>
        <td>
            <input type="text" name="City" id="City" value="" class="form-control" /></td>
    </tr>
    <tr>
        <th align="left">
            <!--@Translate(State, "State")-->
            : </th>
        <td>
            <input type="text" name="State" id="State" value="" class="form-control" /></td>
    </tr>
    <tr>
        <th align="left">
            <!--@Translate(Country, "Country")-->
            : </th>
        <td>
            <input type="text" name="Country" id="Country" value="" class="form-control" /></td>
    </tr>
    <tr>
        <th align="left">
            <!--@Translate(Default, "Default")-->
            : </th>
        @if (!string.IsNullOrWhiteSpace(GetString("UserManagement:User.ManageAddresses.UpdateAddress")))
        {
            if (GetString("UserManagement:User.UserAddress.Default").Contains("checked"))
            {
            <td>
                <input type="checkbox" id="Default" name="Default" checked="checked" /></td>
            }
        }
        else
        {
            <td>
                <input type="checkbox" id="Default" name="Default" /></td>
        }
    </tr>


    <tr>
        <td></td>
        <td>
            @if (!string.IsNullOrWhiteSpace(GetString("UserManagement:User.ManageAddresses.DetailUrl")))
            {
                <a href="@GetValue("UserManagement:User.ManageAddresses.DetailUrl")">
                    <button type="button" class="btn btn-default">Back to addresses</button></a>
            }
            @if (!string.IsNullOrWhiteSpace(GetString("UserManagement:User.ManageAddresses.AddAddress")))
            {
                <input class="btn btn-default" type="submit" id="submitter" value="<!--@Translate(addaddress, "Add address")-->" />
            }
            @if (!string.IsNullOrWhiteSpace(GetString("UserManagement:User.ManageAddresses.UpdateAddress")))
            {
                <input class="btn btn-default" type="submit" id="submit1" value="<!--@Translate(updateaddress, "Update address")-->" />
            }
        </td>
    </tr>
</table>

@GetValue("UserManagement:User.ManageAddresses.FormEnd")


