<div class ="header"><h2>Edit user '@GetValue("UserManagement:User.Name")'</h2></div>
@foreach (LoopItem i in GetLoop("FormValidationErrors")){
	@i.GetValue("HeaderStart")
		<div id="errormessages">
			<ul>
	@i.GetValue("HeaderEnd")
				<li>Error in the input field "@i.GetValue("UserManagement:User.FormValidationError.FieldNiceName")": <a href="javascript:document.getElementById('@i.GetValue("UserManagement:User.FormValidationError.FieldName")').focus();">@i.GetValue("UserManagement:User.FormValidationError.Message")</a></li>
	@i.GetValue("FooterStart")
			</ul>
		</div>
	@i.GetValue("FooterEnd")
}
@GetValue("UserManagement:User.FormStart")
	<table>
		<tr>
			<th align="left"><!--@Translate(Name, "Name")-->: </th>
			<td><input name="@GetValue("UserManagement:User.Name.InputName")" type="text" id="@GetValue("UserManagement:User.Name.InputName")" value="@GetValue("UserManagement:User.Name")" class ="form-control"/></td>
		</tr>
        <tr>
			<th align="left"><!--@Translate(UserName, "Username")-->: </th>
			<td><input name="@GetValue("UserManagement:UserName.Name.InputName")" type="text" id="@GetValue("UserManagement:UserName.Name.InputName")" value="@GetValue("UserManagement:User.UserName")" class ="form-control"/></td>
		</tr>
		<tr>
			<th align="left"><!--@Translate(Email, "Email")-->: </th>
            <td><input name="@GetValue("UserManagement:User.Email.InputName")" type="text" id="@GetValue("UserManagement:User.Email.InputName")" value="@GetValue("UserManagement:User.Email")" class ="form-control"/></td>
		</tr>		
		
		<tr>
			<th align="left"><!--@Translate(PhoneMobile, "Mobile phone")-->: </th>
            <td><input name="@GetValue("UserManagement:User.PhoneMobile.InputName")" type="text" id="@GetValue("UserManagement:User.PhoneMobile.InputName")" value="@GetValue("UserManagement:User.PhoneMobile")" class ="form-control"/></td>
		</tr>
	    
		<tr>
			<th align="left"><!--@Translate(profilepicture, "Profile picture")-->: </th>
            <td><input name="@GetValue("UserManagement:User.Image.UploaderName")" type="file" id="@GetValue("UserManagement:User.Image.UploaderName")" class ="btn btn-default"/></td>
			
		</tr>
	</table>

@if(!string.IsNullOrWhiteSpace(GetString("UserManagement:User.DetailUrl"))){
	<a href="@GetValue("UserManagement:User.DetailUrl")"><button type="button" class="btn btn-default">Back to detail view</button></a>
}

@if (!string.IsNullOrWhiteSpace(GetString("UserManagement:User.ManageAddressesUrl")))
{
	<a href="@GetValue("UserManagement:User.ManageAddressesUrl")"><button type="button" class="btn btn-default">Edit your adresses</button></a>
}

	<input type="submit" id="submitter" value="<!--@Translate(updateuser, "Update user")-->" class ="btn btn-default">


@GetValue("UserManagement:User.FormEnd")



