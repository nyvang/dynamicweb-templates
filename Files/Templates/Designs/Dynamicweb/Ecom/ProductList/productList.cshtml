<h2>@GetValue("Ecom:Group.Name")</h2>


<div class="row">
    @if (!string.IsNullOrWhiteSpace(GetString("Ecom:Search.SearchBox")))
    {
        <div class="col-md-12">@GetValue("Ecom:Search.SearchBox")</div>
    }
</div>


<div class="row">

    @{int count = 0;
      }


    @foreach (LoopItem i in GetLoop("Products"))
         {
        
        
       
        
        <div class="col-md-4">


            <h3><a href="@i.GetValue("Ecom:Product.Link.Clean")">@i.GetValue("Ecom:Product.Name")</a></h3>
             @if (!string.IsNullOrWhiteSpace(i.GetString("Ecom:Product.ImageSmall.Default.Clean")))
            {
            <a href="@i.GetValue("Ecom:Product.Link.Clean")">
                <img src ="@i.GetValue("Ecom:Product.ImageSmall.Default.Clean")" class="img-responsive img-thumbnail" /></a><br />
             }

            <span class="price">
                @i.GetValue("Ecom:Product.Price")
            </span>
            <br />
            @if (!string.IsNullOrWhiteSpace(i.GetString("Ecom:Product.ShortDescription")))
            {
                <span class="shortdescription">@i.GetValue("Ecom:Product.ShortDescription")</span><br />
            }

            <a href="/default.aspx?id=@i.GetValue("Ecom:Product:Page.ID")&amp;productid=@i.GetValue("Ecom:Product.ID")&amp;cartcmd=add" class="btn btn-default">Add to basket</a>


        </div>

     
      
     
    }
</div>
<div id="productlistnavigation">
    <span id="productcount">
        @GetValue("Ecom:ProductList.PageProdCnt") products found
    </span>
    <span id="pagecount">Page @GetValue("Ecom:ProductList.CurrentPage") of @GetValue("Ecom:ProductList.TotalPages")
    </span>
    <span id="pagenavigation">
        <a id="prevpage" href="@GetValue("Ecom:ProductList.PrevPage.Clean")" @GetValue("Ecom:ProductList.PrevPage")>Previous</a> <a id="nextpage" href="@GetValue("Ecom:ProductList.NextPage.Clean")" @GetValue("Ecom:ProductList.NextPage")>Next</a><br />
    </span>
</div>

