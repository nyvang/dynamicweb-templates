<h2>@GetValue("Ecom:Group.Name")</h2>
<ul id="productlist" class="horizontal">
    @foreach (LoopItem i in GetLoop("Products")){
    <li class="listitem@i.GetValue("Products.LoopMod2")">
        <h3><a href="@i.GetValue("Ecom:Product.Link.Clean")">@i.GetValue("Ecom:Product.Name")</a></h3>
        <a href="@i.GetValue("Ecom:Product.Link.Clean")">@i.GetValue("Ecom:Product.ImageSmall.Default")</a>
        <span class="price">
            @i.GetValue("Ecom:Product.Price")
        </span>
        <a href="/default.aspx?id=@i.GetValue("Ecom:Product:Page.ID")&amp;productid=@i.GetValue("Ecom:Product.ID")&amp;cartcmd=add">Add to basket</a>
        @if(Dynamicweb.Input.FormatBoolean(i.GetValue("Ecom:Product.ShortDescription"))){<text>
            <span class="shortdescription">@i.GetValue("Ecom:Product.ShortDescription")</span>
        </text>}
    </li>
    }
</ul>
<div id="productlistnavigation">
    <span id="productcount">
        @GetValue("Ecom:ProductList.PageProdCnt") products found
    </span>
    <span id="pagecount">
        Page @GetValue("Ecom:ProductList.CurrentPage") of @GetValue("Ecom:ProductList.TotalPages")
    </span>
    <span id="pagenavigation">
        <a id="prevpage" href="@GetValue("Ecom:ProductList.PrevPage.Clean")" @GetValue("Ecom:ProductList.PrevPage")>Previous</a> <a id="nextpage" href="@GetValue("Ecom:ProductList.NextPage.Clean")" @GetValue("Ecom:ProductList.NextPage")>Next</a><br />
    </span>
</div>